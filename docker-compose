services:
  n8n:
    container_name: n8n
    image: n8nio/n8n:latest
    restart: unless-stopped
    ports:
      - "5678:5678"
    environment:
      - N8N_BASIC_AUTH_ACTIVE=true
      - N8N_BASIC_AUTH_USER=${N8N_USER}
      - N8N_BASIC_AUTH_PASSWORD=${N8N_PASS}
      - N8N_RUNNERS_ENABLED=true
      - N8N_ENFORCE_SETTINGS_FILE_PERMISSIONS=true
      - OFFLOAD_MANUAL_EXECUTIONS_TO_WORKERS=true
      - N8N_SECURE_COOKIE=false
      - N8N_HOST=localhost
      - WEBHOOK_URL=
      - N8N_PROTOCOL=https
      - N8N_PORT=5678
      - NODE_ENV=production
      - EXECUTIONS_MODE=regular
      - DB_TYPE=sqlite
    volumes:
      - /srv/config/n8n:/home/node/.n8n
      - /mnt/sda1/data:/data
    networks:
      - n8n_network
      - npm_net

  whisper-unused:
    container_name: whisper
    build: ./whisper
    restart: on-failure
    volumes:
      - /mnt/sda1/data:/data
    networks:
      - n8n_network
    ports:
      - "5632:5632"

  instaloader:
    container_name: instaloader
    build: ./instaloader
    restart: on-failure
    ports:
      - "5633:5633"
    networks:
      - n8n_network
    volumes:
      - /mnt/sda1/data:/data
    environment:
      - INSTA_USERNAME=${INSTA_USERNAME}
      - INSTA_PASSWORD=${INSTA_PASSWORD}

networks:
  n8n_network:
    driver: bridge
  npm_net:
    external: true